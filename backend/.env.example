# Backend Environment Variables
# Copy this file to .env and update with your production values

# Database Configuration
# Option 1: PostgreSQL connection URL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/hybah_coffee

# Option 2: Individual PostgreSQL settings (alternative)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=hybah_coffee
# DB_USER=postgres
# DB_PASSWORD=your_password

# Option 3: SQLite for development (set USE_SQLITE=true)
# USE_SQLITE=true

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
# For local development: http://localhost:3000
# For production: https://your-frontend-domain.vercel.app
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@hybahcoffee.com

# Google Maps API (optional)
GOOGLE_MAPS_API_KEY=your_google_maps_key_here
